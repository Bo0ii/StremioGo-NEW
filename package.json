{
	"name": "streamgo",
	"version": "2.0.0",
	"description": "Electron-based Stremio client with plugins and themes support.",
	"main": "./dist/main.js",
	"scripts": {
		"dist": "tsc && node ./copyComponents.js",
		"watch": "tsc -w",
		"lint": "eslint -c .eslintrc --ext .ts ./src",
		"dev": "node -e \"console.clear()\" && npm run dist && npx electron --log-level=3 ./dist/main.js --devtools",
		"dev:perf": "node -e \"console.clear()\" && npm run dist && npx electron --log-level=3 ./dist/main.js",
		"build": "npm run dist && electron-builder",
		"build:linux:x64": "npm run dist && electron-builder --linux --x64",
		"build:linux:arm64": "npm run dist && electron-builder --linux --arm64",
		"build:mac:x64": "npm run dist && electron-builder --mac --x64",
		"build:mac:arm64": "npm run dist && electron-builder --mac --arm64",
		"build:win:x64": "npm run dist && electron-builder --win --x64",
		"build:win:arm64": "npm run dist && electron-builder --win --arm64 --x64=false",
		"build:win": "npm run dist && electron-builder --win"
	},
	"repository": "https://github.com/Bo0ii/StreamGo.git",
	"publish": {
		"provider": "github",
		"releaseType": "release"
	},
	"author": "Bo0ii",
	"license": "MIT",
	"devDependencies": {
		"@types/unzipper": "^0.10.11",
		"acrylic-vibrancy": "^1.1.0",
		"electron": "^37.3.1",
		"electron-builder": "^26.0.12",
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.90.1",
		"@xhayper/discord-rpc": "^1.2.1",
		"anime4k.js": "^0.0.7",
		"discord-api-types": "^0.37.119",
		"electron-prompt": "^1.7.0",
		"electron-updater": "^5.3.0",
		"marked": "^15.0.7",
		"unzipper": "^0.12.3",
		"winston": "^3.11.0"
	},
	"optionalDependencies": {
		"dmg-license": "1.0.11"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"electron",
			"acrylic-vibrancy",
			"electron-winstaller"
		]
	},
	"files": [
		"static/**/*",
		"!**/node_modules/*",
		"!**/dist/*",
		"!**/src/*",
		"index.html"
	],
	"build": {
		"appId": "com.bo0ii.streamgo",
		"productName": "StreamGo",
		"asar": true,
		"icon": "images/icon.png",
		"protocols": [
			{
				"name": "stremio",
				"schemes": [
					"stremio"
				]
			}
		],
		"directories": {
			"output": "release-builds"
		},
		"files": [
			"dist/**/*",
			"index.html",
			"package.json"
		],
		"extraResources": [
			{
				"from": "plugins",
				"to": "plugins",
				"filter": [
					"**/*"
				]
			},
			{
				"from": "themes",
				"to": "themes",
				"filter": [
					"**/*"
				]
			},
			{
				"from": "images",
				"to": "images",
				"filter": [
					"**/*"
				]
			},
			{
				"from": "sql",
				"to": "sql",
				"filter": [
					"**/*"
				]
			}
		],
		"publish": {
			"provider": "github",
			"owner": "Bo0ii",
			"repo": "StreamGo"
		},
		"asarUnpack": [
			"**/register-scheme/build/Release/*.node",
			"**/register-scheme/node-addon-api/src/node-api.target.mk"
		],
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64",
						"arm64"
					]
				}
			],
			"icon": "images/icon.ico",
			"extraResources": [
				{
					"from": "stremio-service/stremio-service-windows",
					"to": "stremio-service",
					"filter": [
						"**/*"
					]
				}
			],
			"requestedExecutionLevel": "asInvoker",
			"signAndEditExecutable": true,
			"verifyUpdateCodeSignature": false
		},
		"nsis": {
			"oneClick": true,
			"perMachine": false,
			"allowElevation": true,
			"allowToChangeInstallationDirectory": false,
			"deleteAppDataOnUninstall": false,
			"runAfterFinish": true,
			"artifactName": "${productName}-${version}-Windows.${ext}",
			"unicode": true,
			"differentialPackage": false,
			"include": "build/installer.nsh"
		},
		"compression": "normal",
		"mac": {
			"target": "dmg",
			"icon": "images/icon.png",
			"extraResources": [
				{
					"from": "stremio-service/stremio-service-macos",
					"to": "stremio-service",
					"filter": [
						"**/*"
					]
				}
			]
		},
		"linux": {
			"target": "AppImage",
			"icon": "images/icon.png",
			"extraResources": [
				{
					"from": "stremio-service/stremio-service-linux",
					"to": "stremio-service",
					"filter": [
						"**/*"
					]
				}
			]
		}
	}
}
